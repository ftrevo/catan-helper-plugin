{
  "manifest_version": 3,
  "name": "Catan Helper",
  "version": "1.0.0",
  "description": "A helper tool for Catan games on colonist.io",
  "action": {
    "default_popup": "index.html",
    "default_title": "Catan Helper"
  },
  "permissions": ["activeTab", "scripting", "tabs"],
  "host_permissions": ["https://colonist.io/*", "http://colonist.io/*"],
  "background": {
    "service_worker": "static/js/background.js"
  },
  "icons": {
    "16": "logo_16x16.png",
    "32": "logo_32x32.png",
    "48": "logo_48x48.png",
    "128": "logo_128x128.png"
  }
}
